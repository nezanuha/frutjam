{
    "compilerOptions": {
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "strictNullChecks": true,
      "sourceMap": true,
      "target": "ESNext",
      "moduleResolution": "node",
      "module": "CommonJS",
      "jsx": "react",
      "allowJs": true,
      "declaration": true,
      "isolatedModules": true,
      "outDir": "./dist/",
      "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/__tests__/*"]
  }
  